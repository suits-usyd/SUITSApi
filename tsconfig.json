{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,

        "lib": ["es5", "es6"],
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": ["src/*", "node_modules/*", "./*.json"]
        }
    },
    "exclude": ["node_modules"]
}
